# Where your LLM metrics endpoint lives.
# If your LLM runs on the same Linux host (outside Docker), keep host-gateway below
LLM_HOST=192.168.1.123
LLM_PORT=8000
LLM_METRICS_PATH=/v1/metrics

# Prometheus
PROM_SCRAPE_INTERVAL=5s
PROM_EVALUATION_INTERVAL=5s
PROM_RETENTION=15d

# Grafana admin (first run)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# Image pins (adjust if you want newer)
PROMETHEUS_IMAGE=prom/prometheus:v2.53.0
GRAFANA_IMAGE=grafana/grafana-oss:11.0.0
